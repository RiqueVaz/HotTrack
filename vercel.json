{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-pending-transactions?secret=SUA_CHAVE_SECRETA_AQUI",
      "schedule": "*/2 * * * *"
    }
  ]
}
